<!--Main page featuring a nav bar & search bar-->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
      <link rel='stylesheet' href='/stylesheets/index.css' />
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <meta name="viewport" content="width=device-width, initial-scale=0.6, shrink-to-fit=no">
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

  </head>
  <body>
  <!--Nav bar-->
  <nav class="navbar navbar-expand-lg navbar-light nav-tabs">
      <a class="navbar-brand" href="/"><img src="/images/HireMeLogo.png" alt="Logo" style="width:82px; height:35px;"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
              <a class="nav-item nav-link active" href="/">Home</a>
              <a class="nav-item nav-link " href="/search">Search</a>
              <a class="nav-item nav-link" href="/submit">Submit a Job</a>
              <a class="nav-item nav-link" href="/jobrequest">Submit a Job Request</a>
              <a class="nav-item nav-link" href="/requestlist">Search Job Requests</a>
              <a class="nav-item nav-link" href="/company">Companies</a>
          </div>
      </div>
  </nav>
  <div style="margin-top: 12%">
      <div class="container">
            <div class="row">
                <div class="col">
                    <h1>Find Your Future</h1>
                    <p>Search or Submit a job now!</p>
                </div>
            </div>
          <form method="GET" action="/search">
              <div class="row">
                  <div class="col-sm-7">
                      <div class="active-cyan-4 mb-4">
                          <input class="form-control" type="text" placeholder="Job" aria-label="Search" name="jobname" id="jobname" required>
                      </div>
                  </div>
                  <div class="col-sm-5">
                      <input class="form-control" type="text" placeholder="Location" aria-label="Search" name="joblocation" id="joblocation" required>
                  </div>
                  <div class="col align-self-end">
                      <button type="submit" class="btn btn-success float-right" >Search Jobs</button>
                      <button type="button" onclick="window.location.href='/submit'  " class="btn btn-primary float-right bigpadding">Submit a Job</button>
                  </div>
              </div>
          </form>
      </div>
  </div>

  <!--Footer-->
  <div class="footer">
      <p class="text-right" style="margin-right: 10px; margin-top: 10px">FindYourFutureÂ©</p>
  </div>
  </body>
</html>
