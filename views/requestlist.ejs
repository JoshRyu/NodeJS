<!--Search & results page for job request listings-->
<!DOCTYPE html>
<html>
<head>
    <title>Job Requests</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="/javascripts/requestlist.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</head>
<body onload=searchJob();searchLocation();>
<!--Nav bar-->
<nav class="navbar navbar-expand-lg navbar-light nav-tabs">
    <a class="navbar-brand" href="/"><img src="/images/HireMeLogo.png" alt="Logo" style="width:82px; height:35px;"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="/">Home</a>
            <a class="nav-item nav-link" href="/search">Search</a>
            <a class="nav-item nav-link" href="/submit">Submit a Job</a>
            <a class="nav-item nav-link" href="/jobrequest">Submit a Job Request</a>
            <a class="nav-item nav-link active" href="/requestlist">Search Job Requests <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/company">Companies</a>
        </div>
    </div>
</nav>
<!--Breadcrumb bar-->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Job Requests</li>
    </ol>
</nav>
<!--Search bars & respective headings -->
<div class="container" style="padding: 2%">
    <div class="row">
        <div class="col-sm">
            <h1 class="display-20">Job Title</h1>
        </div>
        <div class="col-sm">
            <h1 class="display-20">Location</h1>
        </div>
    </div>
    <div class="row" >
        <div class="col-sm">
            <input class="form-control mr-sm-2" type="search"  placeholder="Job" id="name" onkeyup="searchJob()" aria-label="Search">
        </div>
        <div class="col-sm">
            <input class="form-control mr-sm-2" type="search"  placeholder="Location" id="location" onkeyup="searchLocation()" aria-label="Search">
        </div>
    </div>
    <hr class="my-4">
    <!--Results table-->
    <table class="table table-striped table-hover" id="jobTable" style="margin-top: 20px">
        <thead>
        <tr>
            <th scope="col">First name</th>
            <th scope="col">Surname</th>
            <th scope="col">Job Title</th>
            <th scope="col">Job Location</th>
            <th scope="col">Expecting Salary</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i=0; i<data.length; i++) {%>
            <tr>
                <td><%= data[i].first_name %></td>
                <td><%= data[i].last_name %></td>
                <td><%= data[i].job_title %></td>
                <td><%= data[i].job_location %></td>
                <td>£<%= data[i].job_salary %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <caption>List of search results</caption>
</div>
<!--Footer-->
<div class="footer">
    <p class="text-right" style="margin-right: 10px; margin-top: 10px">FindYourFuture©</p>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</body>
</html>